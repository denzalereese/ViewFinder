<h1>Remove Me - photo upload form</h1>

<%= form_for [@landmark, @photo] do |f| %>

	<%= f.label "Title"  %>
	<%= f.text_field :title, placeholder: "Photo Title" %> <br>

	<%= f.label "Your Tip"  %>
	<%= f.text_area :caption, placeholder: "Tell Us About Your Photo" %> <br>


	<%= f.submit "Save"%>

<% end %>